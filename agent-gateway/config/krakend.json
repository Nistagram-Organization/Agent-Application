{
  "version": 2,
  "port": 8080,
  "extra_config": {
    "github_com/devopsfaith/krakend-cors": {
      "allow_origins": [
        "*"
      ],
      "allow_methods": [
        "GET",
        "HEAD",
        "POST",
        "OPTIONS",
        "DELETE",
        "PUT",
        "PATCH"
      ],
      "expose_headers": [
        "Content-Length",
        "Content-Type"
      ],
      "max_age": "12h",
      "allow_headers": [
        "*"
      ],
      "allow_credentials": true,
      "debug": false
    },
    "github_com/devopsfaith/krakend-gologging": {
      "level": "ERROR",
      "prefix": "[KRAKEND]",
      "syslog": false,
      "stdout": true,
      "format": "default"
    },
    "sd_providers": {
      "providers": {"dns": true},
      "hosts": [
        {
          "sd": "dns",
          "host": "agent-products.service.consul"
        }
      ]
    }
  },
  "timeout": "3000ms",
  "cache_ttl": "300s",
  "output_encoding": "no-op",
  "name": "Agent Application Gateway",
  "endpoints": [
    {
      "endpoint": "/products",
      "method": "GET",
      "output_encoding": "no-op",
      "extra_config": {},
      "backend": [
        {
          "url_pattern": "/products",
          "host": [
            "agent-products.service.consul"
          ],
          "encoding": "no-op",
          "sd": "dns",
          "method": "GET",
          "extra_config": {},
          "disable_host_sanitize": true
        }
      ]
    },
    {
      "endpoint": "/products/{id}",
      "method": "GET",
      "output_encoding": "no-op",
      "extra_config": {},
      "backend": [
        {
          "url_pattern": "/products/{id}",
          "host": [
            "http://127.0.0.1:8081"
          ],
          "encoding": "no-op",
          "sd": "static",
          "method": "GET",
          "extra_config": {},
          "disable_host_sanitize": false
        }
      ]
    },
    {
      "endpoint": "/products",
      "method": "POST",
      "output_encoding": "no-op",
      "headers_to_pass" : ["*"],
      "extra_config": {},
      "backend": [
        {
          "url_pattern": "/products",
          "host": [
            "http://127.0.0.1:8081"
          ],
          "encoding": "no-op",
          "sd": "static",
          "method": "POST",
          "extra_config": {},
          "disable_host_sanitize": false
        }
      ]
    },
    {
      "endpoint": "/products",
      "method": "PUT",
      "output_encoding": "no-op",
      "headers_to_pass" : ["*"],
      "extra_config": {},
      "backend": [
        {
          "url_pattern": "/products",
          "host": [
            "http://127.0.0.1:8081"
          ],
          "encoding": "no-op",
          "sd": "static",
          "method": "PUT",
          "extra_config": {},
          "disable_host_sanitize": false
        }
      ]
    },
    {
      "endpoint": "/products/{id}",
      "method": "DELETE",
      "output_encoding": "no-op",
      "extra_config": {},
      "backend": [
        {
          "url_pattern": "/products/{id}",
          "host": [
            "http://127.0.0.1:8081"
          ],
          "encoding": "no-op",
          "sd": "static",
          "method": "DELETE",
          "extra_config": {},
          "disable_host_sanitize": false
        }
      ]
    },
    {
      "endpoint": "/reports",
      "method": "GET",
      "output_encoding": "no-op",
      "extra_config": {},
      "backend": [
        {
          "url_pattern": "/reports",
          "host": [
            "http://127.0.0.1:8082"
          ],
          "encoding": "no-op",
          "sd": "static",
          "method": "GET",
          "extra_config": {},
          "disable_host_sanitize": false
        }
      ]
    },
    {
      "endpoint": "/invoices",
      "method": "POST",
      "output_encoding": "no-op",
      "headers_to_pass" : ["*"],
      "extra_config": {},
      "backend": [
        {
          "url_pattern": "/invoices",
          "host": [
            "http://127.0.0.1:8083"
          ],
          "encoding": "no-op",
          "sd": "static",
          "method": "POST",
          "extra_config": {},
          "disable_host_sanitize": false
        }
      ]
    }
  ]
}